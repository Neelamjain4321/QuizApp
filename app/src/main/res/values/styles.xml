<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Radio Buttons -->
    <style name="radio_buttons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!-- Question -->
    <style name="question_textviews">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Answers -->
    <style name="checkbox_answers">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="question_linear_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/sp_10</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
